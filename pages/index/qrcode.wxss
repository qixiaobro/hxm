/* pages/index/qrcode.wxss */

page{
  background-color: rgba(0, 0, 0, .1);
}
.body{
  border-radius: 10rpx;
  margin: 100rpx 75rpx 100rpx 75rpx;
  width: 600rpx;
  height: 900rpx;
  background-color: #fff;
}

.top{
  width: 600rpx;
  height: 200rpx;
}

.touxiang-box{
  width: 200rpx;
  height: 200rpx;
  float: left;
}

.wode-box{
  width: 200rpx;
  height: 100rpx;
  float: left;
  font-weight: bold;
  margin-top: 50rpx;
  font-size: 32rpx;
}

.wode{
  margin-left: 0rpx;
}

.fenxiang{
  width: 200rpx;
  height: 100rpx;
  float: left;
  margin-top: 50rpx;
  font-size: 20rpx;
  color: #ef7b4b;
}

.touxiang{
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.touxiang image{
  max-width: 80%;
  max-height: 80%;
}

.img-box{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-left: 50rpx;
}

.img-box image{
  max-width: 100%;
  max-height: 100%;
}

.share-box{
  width: 100rpx;
  height: 50rpx;
  float: left;
  padding-left: 0rpx;
}

.middle{
  height: 100rpx;
  width: 100%;
  font-weight: lighter;
  text-align: center;
  font-size: 30rpx;
}

.content{
  padding-top: 30rpx;
}

.code-box{
  width: 500rpx;
  height: 500rpx;
  background-color: lightpink;
  margin-left: 50rpx;
  border-radius: 10rpx;
}

.code-box image{
  max-height: 100%;
  max-width: 100%;
}

button{
  width: 80%;
  height: 80%;
  font-size: 30rpx;
  color: #ef7b4b;
}