page {
  height: 100%;
}

.search {
  height: 7%;
  width: 100%;
  background-color: #ececec;
}

input {
  height: 55rpx;
  width: 85%;
  margin-top: 15rpx;
  border-radius: 4px;
  background-color: #fff;
  font-size: 30rpx;
  float: left;
  margin-left: 2%;
  text-align: center;
}

.add {
  height: 50rpx;
  width: 12%;
  float: left;
  margin-top: 15rpx;
  padding-left: 1%;
}

.add image {
  height: 100%;
  width: 80%;
}

.text {
  height: 4%;
  background-color: white;
}

.text1 {
  height: 60rpx;
  margin-left: 25rpx;
  width: 20%;
  float: left;
  font-size: 30rpx;
  padding-top: 3rpx;
}

.text2 {
  height: 60rpx;
  width: 20%;
  float: left;
  font-size: 30rpx;
  padding-top: 3rpx;
}

.num {
  height: 60rpx;
  width: 20%;
  color: red;
  float: left;
  font-size: 30rpx;
  padding-top: 3rpx;
}

.tab {
  height: 88%;
  width: 100%;
}

.swiper-tab {
  width: 20%;
  height: 100%;
  text-align: center;
  float: left;
}

.swiper-tab-list {
  font-size: 30rpx;
  width: 100%;
  height: 110rpx;
  line-height: 100rpx;
  color: black;
}

.on {
  color: #ffffff;
  border-bottom: 5rpx solid #da7c0c;
  background-color: #ef7b4b;
}

.tab-title {
  height: 5%;
  font-size: 35rpx;
  text-align: center;
  background-color: gainsboro;
}

.swiper-box {
  display: block;
  height: 100% !important;
  width: 80%;
  overflow: hidden;
  background-color: white;
}


.card {
  width: 100%;
  height: 200rpx;
}

.image-box {
  width: 30%;
  height: 98%;
  float: left;
}

.content-box {
  width: 68%;
  height: 98%;
  float: left;
  margin-left: 2%;
}

.fgx {
  width: 100%;
  height: 2%;
  background-color: lightgray;
  float: left;
}

.image-box image {
  max-width: 100%;
  max-height: 90%;
  padding-top: 5%;
}

.goods_name {
  width: 100%;
  height: 50%;
  float: left;
}

.shop_price {
  width: 100%;
  height: 25%;
  float: left;
  color: red;
  text-align: left;
}

.quantity {
  width: 100%;
  height: 25%;
  float: left;
  color: lightgrey;
}
