<!--pages/index/index.wxml-->
<view class='biao'>
 
  <view class="doc-title zan--bottom" style="margin: 0px 20px 20px 20px">我的订单</view>

</view>
<view class="swiper-tab"> 

  <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view> 
  <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">待付款</view> 
  <view class="tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">待收货</view> 
  <view class="tab-item {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">待发货</view>
  <view class="tab-item {{currentTab==4 ? 'on' : ''}}" data-current="4" bindtap="swichNav">已完成订单</view>
</view> 
  
<swiper current="{{currentTab}}" class="swiper" duration="300" style="height:{{winHeight - 30}}px" bindchange="bindChange"> 
 <swiper-item > 
    <view>页面一</view>
 </swiper-item> 
 <swiper-item> 
  <view>页面er</view> 
 </swiper-item> 
 <swiper-item> 
  <view>页面三</view> 
 </swiper-item> 
 <swiper-item> 
  <view>页面四</view> 
 </swiper-item> 
 <swiper-item> 
  <view>页面五</view> 
 </swiper-item> 
</swiper>


